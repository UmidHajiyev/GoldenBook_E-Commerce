@model IEnumerable<GoldenBook.Models.Product>


<div class="row pb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid black; border-radius:5px">
                    <div class="card">
                        <img src="@item.ImageUrl" class="card-img-top rounded" style="height:350px" />
                        <div class="pl-1">
                            <p class="card-title h5">@item.Name</p>
                            <p class="card-title text-secondary">@item.Author</p>
                        </div>
                        <div class="pl-1">
                            <p>List Price: <strike><b>@item.ListPrice.ToString("0.00") </b>₼</strike></p>
                            <p>Price: @item.Price10.ToString("0.00") ₼</p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn form-control btn-primary" asp-route-productId="@item.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>